apiVersion: v1
kind: Secret
metadata:
  name: monitoring-secrets
type: Opaque
stringData:
  APPLICATIONINSIGHTS_CONNECTION_STRING: "InstrumentationKey=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx;IngestionEndpoint=https://region.applicationinsights.azure.com/"
  VITE_APPLICATIONINSIGHTS_CONNECTION_STRING: "InstrumentationKey=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx;IngestionEndpoint=https://region.applicationinsights.azure.com/"
  VITE_GA_MEASUREMENT_ID: "G-XXXXXXXXXX"

# Instructions:
# 1. Copy this file to monitoring-secrets.yaml (DO NOT commit the actual secrets file!)
# 2. Replace the placeholder values with your actual credentials from:
#    - Azure Portal: Application Insights > Overview > Connection String
#    - Google Analytics: Admin > Data Streams > Measurement ID
# 3. Apply to your Kubernetes cluster:
#    kubectl apply -f k8s/monitoring-secrets.yaml
# 4. Verify secrets are created:
#    kubectl get secrets monitoring-secrets
